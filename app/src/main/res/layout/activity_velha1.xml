<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:columnCount="5"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    tools:context=".velha1"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <!--descrição-->
    <TextView
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/descricao"
        android:fontFamily="serif-monospace"
        android:text="@string/descritivo"
        android:background="@color/fundo_tela1"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>


    <!--A1-->
    <EditText
        android:id="@+id/a1"
        android:digits="123456789"
        android:maxLength="1"
        android:layout_row="1"
        android:layout_column="1"
        android:inputType="numberDecimal"
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:textColor="@color/a1"
        android:fontFamily="serif-monospace"
        android:text=""
        android:textSize="40dp"
        android:textAlignment="center"
        android:background="@color/b3"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>
    <!--A2-->
    <EditText
        android:id="@+id/a2"
        android:digits="123456789"
        android:maxLength="1"
        android:layout_row="1"
        android:layout_column="2"
        android:inputType="numberDecimal"
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:textColor="@color/a2"
        android:fontFamily="serif-monospace"
        android:text=""
        android:textSize="40dp"
        android:textAlignment="center"
        android:background="@color/a3"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>
    <!--A3-->
    <EditText
        android:id="@+id/a3"
        android:digits="123456789"
        android:maxLength="1"
        android:layout_row="1"
        android:layout_column="3"
        android:inputType="numberDecimal"
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:textColor="@color/a3"
        android:fontFamily="serif-monospace"
        android:text=""
        android:textSize="40dp"
        android:textAlignment="center"
        android:background="@color/c2"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>
    <!--B1-->
    <EditText
        android:id="@+id/b1"
        android:digits="123456789"
        android:maxLength="1"
        android:layout_row="2"
        android:layout_column="1"
        android:inputType="numberDecimal"
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:textColor="@color/b1"
        android:fontFamily="serif-monospace"
        android:text=""
        android:textSize="40dp"
        android:textAlignment="center"
        android:background="@color/b2"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        />
    <!--B2-->
    <EditText
        android:id="@+id/b2"
        android:digits="123456789"
        android:maxLength="1"
        android:layout_row="2"
        android:layout_column="2"
        android:inputType="numberDecimal"
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:textColor="@color/c1"
        android:fontFamily="serif-monospace"
        android:text=""
        android:textSize="40dp"
        android:textAlignment="center"
        android:background="@color/a1"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"/>
    <!--B3-->
    <EditText
        android:id="@+id/b3"
        android:digits="123456789"
        android:maxLength="1"
        android:layout_row="2"
        android:layout_column="3"
        android:inputType="numberDecimal"
        android:layout_width="80sp"
        android:layout_height="40sp"
        android:textColor="@color/b3"
        android:fontFamily="serif-monospace"
        android:text=""
